---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import BlogPostCard from '../../components/BlogPostCard.astro';

// Get all blog posts and sort them by date
const posts = await getCollection('blog', ({ data }) => {
    return data.status === 'published';
});

// Sort posts by date, most recent first
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Blog Posts" description="Read our latest blog posts about web development, technology, and more">
    <div class="space-y-8">
        <header class="text-center">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">Blog Posts</h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                Discover insights about web development, technology, and more
            </p>
        </header>

        {/* Featured Posts Section */}
        {sortedPosts.some(post => post.data.featured) && (
            <section class="mb-12">
                <h2 class="text-2xl font-bold mb-6">Featured Posts</h2>
                <div class="grid gap-8 lg:grid-cols-2">
                    {sortedPosts
                        .filter(post => post.data.featured)
                        .map(post => (
                            <BlogPostCard
                                title={post.data.title}
                                description={post.data.description}
                                pubDate={post.data.pubDate}
                                hero={post.data.hero}
                                author={post.data.author}
                                categories={post.data.categories}
                                slug={post.slug}
                                readingTime={post.data.readingTime}
                            />
                        ))
                    }
                </div>
            </section>
        )}

        {/* All Posts Section */}
        <section>
            <h2 class="text-2xl font-bold mb-6">All Posts</h2>
            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                {sortedPosts.map(post => (
                    <BlogPostCard
                        title={post.data.title}
                        description={post.data.description}
                        pubDate={post.data.pubDate}
                        hero={post.data.hero}
                        author={post.data.author}
                        categories={post.data.categories}
                        slug={post.slug}
                        readingTime={post.data.readingTime}
                    />
                ))}
            </div>
        </section>
    </div>
</Layout>